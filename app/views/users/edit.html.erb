<h1>Edit user for Web Flashcards</h1>

<%= form_for(@user, :html => {:multipart => true}) do |f| %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Create User!" %>
  </div>
  
<% end %>
<h1>Edit user for Web Flashcards</h1>

  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>

<%= form_for(@user, :html => {:multipart => true}) do |f| %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <% if @user.is_admin %>
        <br>
        <%= f.label :is_admin %>
        <%= f.check_box :is_admin, :disabled => false %>
    <% else %>
        <br>
        <%= f.label :is_admin %>
        <%= f.check_box :is_admin, :disabled => true %>
    <% end %>
    

  </div>

  <div class="actions">
    <%= f.submit "Save User!" %>
  </div>
  
<% end %>